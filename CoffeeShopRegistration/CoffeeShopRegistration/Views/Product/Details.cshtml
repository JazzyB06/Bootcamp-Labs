@model Product
<h2>Register</h2>
<form asp-action="SubmitProduct" method="post">
	<div class="form-group">
		<label asp-for="Id"></label>
		<input asp-for="Id" class="form-control" />
		<span asp-validation-for="Id" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Name"></label>
		<input asp-for="Name" class="form-control" />
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Description"></label>
		<input asp-for="Description" class="form-control" type="description" />
		<span asp-validation-for="Description" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Price"></label>
		<input asp-for="Price" class="form-control" type="price" />
		<span asp-validation-for="Price" class="text-danger"></span>
	</div>
	<button type="submit" class="btn btn-primary">Submit Product</button><!--the submit button must be type="submit" and must be in the form tag or else it won't work-->
</form>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}